{
    "name": "assessment/php-mvc-app",
    "description": "A PHP MVC application for displaying and filtering JSON data",
    "type": "project",
    "require": {
        "php": ">=7.4",
        "ext-gd": "*",
        "ext-json": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        }
    },
    "scripts": {
        "serve": [
            "Composer\\Config::disableProcessTimeout",
            "php -S localhost:8000 -t public"
        ]
    }
}